<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?attr/colorTertiary">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_account" />

        <TextView
            android:id="@+id/userIf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:text="홍길동님"
            android:textSize="18sp"
            android:fontFamily="@font/jejugothic"/>
    </FrameLayout>

    <TextView
        android:id="@+id/userIf_retrieve"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/frame_layout"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="사용자 정보 수정"
        android:textColor="?attr/colorOnTertiary"
        android:fontFamily="@font/jejugothic"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/userIf_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/userIf_retrieve"
        android:fontFamily="@font/jejugothic"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="사용자 정보 삭제"
        android:textColor="?attr/colorOnTertiary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/setting_stt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/userIf_delete"
        android:fontFamily="@font/jejugothic"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="음성인식 옵션"
        android:textColor="?attr/colorOnTertiary"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/userIf_delete"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="개발자 정보\n충북대학교 소프트웨어학과 신이숙 이유진\ndldbwls6763@chungbuk.co.kr\n\nSTT서비스   ETRI\nAI대화봇     (주)스캐터랩\n검색 엔진     NAVER"
        android:textColor="?attr/colorSecondaryVariant"
        android:lineSpacingExtra ="10dp"
        android:fontFamily="@font/jejugothic"
        android:textSize="13sp" />

</RelativeLayout>