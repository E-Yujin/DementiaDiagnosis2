<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/before"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_left_right"
        android:rotation="-90" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/jejugothic"
        android:text="지남력"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_left_right"
        android:rotation="90" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/type"
        android:layout_marginTop="20dp"
        android:progress="20"
        android:progressDrawable="@drawable/progressbar" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/progressBar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/jejugothic"
        android:gravity="center"
        android:hint="Question"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="10dp"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/quiz_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/star_one"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/star_two"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/star_three"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz_box"
        android:layout_alignEnd="@+id/quiz_box"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:src="@drawable/ic_forward_two" />

    <LinearLayout
        android:id="@+id/select_box_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forward"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnOne"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:src="@drawable/star_square"/>

            <ImageView
                android:id="@+id/starOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:minHeight="70dp"
                android:minWidth="70dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:src="@drawable/ic_star"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnTwo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:rotation="90"
                android:src="@drawable/star_square"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/starTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:minHeight="70dp"
                android:minWidth="70dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:src="@drawable/ic_star"/>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_box_linear"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnThree"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:rotation="-90"
                android:padding="0dp"
                android:src="@drawable/star_square"/>

            <ImageView
                android:id="@+id/starThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:minHeight="70dp"
                android:minWidth="70dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:src="@drawable/ic_star"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnFour"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:rotation="-180"
                android:src="@drawable/star_square"/>

            <ImageView
                android:id="@+id/starFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:minHeight="70dp"
                android:minWidth="70dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:src="@drawable/ic_star"/>
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/gray_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_round_bar"
        android:backgroundTint="#F4F4F4">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:backgroundTint="#DFDFDF"
            android:fontFamily="@font/jejugothic"
            android:text="잘모르겠어요"
            android:textColor="#787878"
            android:textSize="14sp" />
    </FrameLayout>
</RelativeLayout>