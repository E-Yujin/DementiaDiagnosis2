<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/square_one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/square"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/circle"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:id="@+id/triangle_one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/triangle"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:id="@+id/square"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/square" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:id="@+id/box"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/box" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:id="@+id/triangle_two"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/triangle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnSquare"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:contentDescription="square"
            android:src="@drawable/square"
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/btnCircle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:contentDescription="circle"
            android:src="@drawable/circle"
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/btnTriangle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:elevation="50dp"
            android:contentDescription="triangle"
            android:src="@drawable/triangle"
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:focusable="true" />

    </LinearLayout>

    <!--<Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:text="정답 제출" />-->

</LinearLayout>