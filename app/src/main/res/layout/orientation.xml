<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/before"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_left_right"
        android:rotation="-90" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/jejugothic"
        android:gravity="center"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="10dp"
        android:text="지남력"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/submit"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_left_right"
        android:rotation="90" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/type"
        android:layout_marginTop="20dp"
        android:progress="0"
        android:progressDrawable="@drawable/progressbar" />

    <RelativeLayout
        android:id="@+id/textLayout"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejugothic"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="10dp"
            android:text="지금 있는 곳은 어디입니까?"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/announce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jejugothic"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="10dp"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="15sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/textLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/helper_jump"
        app:tint="@color/main" />

    <RelativeLayout
        android:id="@+id/gray_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_round_bar"
        android:backgroundTint="#F4F4F4"
        android:gravity="center"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="10dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/goolelayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/jejugothic"
                android:gravity="center"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/sttStart"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/goolelayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_mic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/donknow"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sttStart"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#DFDFDF"
            android:fontFamily="@font/jejugothic"
            android:gravity="center"
            android:text="잘모르겠어요"
            android:textColor="#787878"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>
