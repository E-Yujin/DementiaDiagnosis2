<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="QuizPage.ExecutionPage"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:fontFamily="@font/jejugothic"
        android:gravity="center"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="10dp"
        android:text="TextView"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/process_num"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:fontFamily="@font/jejugothic"
        android:gravity="center"
        android:layout_gravity="right"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="10dp"
        android:text="TextView"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/before"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:tint="@color/grey"
            android:src="@drawable/before" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/announce"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="여기 점을 연결하여 그린 그림이 있습니다."
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/announce"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/space_time" />

            <QuizPage.SpaceTimeView
                android:id="@+id/canvas"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@id/image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center" />

            <Button
                android:id="@+id/eraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/canvas"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="지우기" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/submit"
            android:layout_width="35dp"
            android:layout_height="50dp"
            app:tint="@color/grey"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/after"
            />
    </LinearLayout>
</LinearLayout>