<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".Result">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/score"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_above="@+id/barChart"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape_oval"
            android:backgroundTint="#DDDDDD"
            android:fontFamily="@font/jejugothic"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:text="30"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/score"
            android:layout_alignBottom="@+id/score"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="/ 30"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart2"
            android:layout_toStartOf="@+id/barChart"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:textSize="12sp"
            android:textColor="#BABABA"
            android:text="지남력" />

        <ProgressBar
            android:id="@+id/barChart"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="230dp"
            android:layout_height="12dp"
            android:layout_above="@+id/barChart2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:progress="30"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/ori_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart2"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/barChart"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="5/5"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart3"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="9dp"
            android:layout_toStartOf="@+id/barChart2"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="기억력"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/barChart2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="230dp"
            android:layout_height="12dp"
            android:layout_above="@+id/barChart3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/mem_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart3"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/barChart"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="10/10"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart4"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="9dp"
            android:layout_toStartOf="@+id/barChart3"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="주의력"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/barChart3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="230dp"
            android:layout_height="12dp"
            android:layout_above="@+id/barChart4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:progress="20"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/att_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart4"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/barChart"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="3/3"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/spacetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart5"
            android:layout_toStartOf="@+id/barChart4"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:textSize="12sp"
            android:textColor="#BABABA"
            android:text="시공간" />

        <ProgressBar
            android:id="@+id/barChart4"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="230dp"
            android:layout_height="12dp"
            android:layout_above="@+id/barChart5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/spa_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart5"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/barChart"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="2/2"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/execution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart6"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/barChart5"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="집행기능"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/barChart5"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="230dp"
            android:layout_height="12dp"
            android:layout_above="@+id/barChart6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:progress="70"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/exe_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barChart6"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/barChart"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="6/6"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/result_card"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="38dp"
            android:layout_toStartOf="@+id/barChart6"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="언어기능"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/barChart6"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="230dp"
            android:layout_height="12dp"
            android:layout_above="@+id/result_card"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:progress="30"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/lan_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/result_card"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="38dp"
            android:layout_toEndOf="@+id/barChart"
            android:fontFamily="@font/jejugothic"
            android:letterSpacing="0.04"
            android:text="4/4"
            android:textColor="#BABABA"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/endBtn"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#6799FF"
            android:elevation="10dp"
            android:fontFamily="@font/jejugothic"
            android:gravity="center"
            android:letterSpacing="0.5"
            android:text="확 인"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/result_card"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/endBtn"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/result_text"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:padding="10dp"
                android:fontFamily="@font/jejugothic"
                android:lineSpacingExtra ="10dp"
                android:letterSpacing="0.04"
                android:text="여기는 진단 결과 설명이 나오는 부분.\n
여기는 진단 결과 설명이 나오는 부분.\n여기는 진단 결과 설명이 나오는 부분.\n
여기는 진단 결과 설명이 나오는 부분.\n여기는 진단 결과 설명이 나오는 부분." />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>