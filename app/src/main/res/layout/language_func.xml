<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="QuizPage.ExecutionPage">

    <ImageButton
        android:id="@+id/left"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_left_right"
        android:rotation="-90" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/jejugothic"
        android:text="지남력"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_left_right"
        android:rotation="90" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/type"
        android:layout_marginTop="20dp"
        android:progress="20"
        android:progressDrawable="@drawable/progressbar" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/progressBar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/jejugothic"
        android:gravity="center"
        android:hint="Question"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="10dp"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/question_image"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/goolelayout"
        android:layout_below="@id/question_image"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/jejugothic"
        android:hint="당신의 대답">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejugothic"
            android:gravity="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/sttStart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/goolelayout"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_mic"/>
</RelativeLayout>